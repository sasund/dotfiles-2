#!/usr/bin/env bash

set -eo pipefail

CURRENT=$(pwd)
INSTALL_ZSH=true
INSTALL_VIM=true
CONFIG_ONLY=false

info () {
    printf "  [ \033[00;34m..\033[0m ] %s" "$1"
}

success () {
    printf "\r\033[2K  [ \033[00;32mOK\033[0m ] %s\n" "$1"
}

fail () {
    printf "\r\033[2K  [\033[0;31mFAIL\033[0m] %s\n" "$1"
    echo ''
    exit
}

link_files () {
    if [ -L "$2" ] ; then
        rm -f "$2"
    fi

    ln -s "$CURRENT/$1" "$2"
    success "linked $1 to $2"
}

ensure_dir () {
    if [ ! -d "$1" ] ; then
        mkdir -p "$1"

        success "created directory $1"
    fi
}

setup_git () {
    link_files git/git-completion.bash ~/.git-completion.sh
    link_files git/gitattributes ~/.gitattributes
    link_files git/gitconfig ~/.gitconfig
    link_files git/gitignore_global ~/.gitignore_global
    link_files git/_git ~/.zsh/_git
    link_files git/_hub ~/.zsh/_hub

    git config --global core.excludesfile ~/.gitignore_global
}

# mercurial
link_files mercurial/hgrc ~/.hgrc

# elinks
ensure_dir ~/.elinks
link_files elinks/elinks.conf ~/.elinks/elinks.conf

# tmux
link_files tmux/tmux.conf ~/.tmux.conf

# ack
link_files ack-grep/ackrc ~/.ackrc

# urlview
link_files urlview/urlview ~/.urlview

# git
setup_git

# Parsing options
if [ $# -gt 0 ] ; then
    for arg in "$@" ; do
        if [ $arg = '--no-zsh' ] ; then
            INSTALL_ZSH=false
        elif [ $arg = '--no-vim' ] ; then
            INSTALL_VIM=false
        elif [ $arg = '--config-only' ] ; then
            CONFIG_ONLY=true
        fi
    done
fi

# Vim/ZSH
if $CONFIG_ONLY ; then
    info "Skipped submodules installation"
else
    # Submodules
    git submodule update --init

    if $INSTALL_VIM ; then
        cd "$CURRENT/vim"
        bin/install
    fi

    if $INSTALL_ZSH ; then
        cd "$CURRENT/zsh"
        bin/install
    fi
fi

echo ''
echo '  All installed!'
